<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/sent_msg_body"
        android:text="hello, hello!"
        android:background="@drawable/chat_message_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="20dp"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/sent_msg_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_below="@id/sent_msg_body"
        android:layout_toLeftOf="@id/user_image_sent"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image_sent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="8dp"
        android:layout_alignBottom="@id/sent_msg_time"
        android:layout_alignParentRight="true"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="2dp"
        android:src="@drawable/female_image"/>

</RelativeLayout>